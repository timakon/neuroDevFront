<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="public/css/style.css">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous">
    </script>
    <script src="public/javascript/index.js"></script>
    <title>Document</title>
</head>
<body>
<header class="navigation">
    <div>
        <div class="name">User Name</div>
        <input type="checkbox" id="avatar">
        <label for="avatar" class="avatar">
            <img src="public/man-user.png" alt="">
        </label>
    </div>
</header>
<!--<ul class="drop_down_menu">-->
<!--<li>1</li>-->
<!--<li>2</li>-->
<!--<li>3</li>-->
<!--</ul>-->
<main>
    <% const base64 = 'data:image/png;base64,' %>
    <div class="content">

        <div class="filling">
            <% dataNewRecommendations.forEach((recommendation) => { %>
            <% const picture = base64 + recommendation.picture; %>
            <div class="card">
                <div class="description">
                    <p class="description_text"> <%= recommendation.text %></p>
                    <!--TODO Поставить ограниечение на ввод текста в "<p class=description_text></p>", максимум 600 символов-->
                </div>
                <div class="map">
                    <img src="<%= picture %>" alt="">
                </div>
            </div>
            <% }); %>
        </div>
        <div class="evaluateds">
            <% dataEvaluatedUsers.forEach((user) => { %>
            <% const picture = base64 + user.avatar; %>
            <% const name = user.name + ' ' + user.surname %>
            <div class="user_evaluated" id="<%= user.uid %>">
                <img src="<%= picture %>"  alt="">
                <p class="name_user_evaluated"><%= name %></p>
            </div>
            <% }); %>
        </div>

        <div class="sidebar">
            <form class="sidebarForm">
                <div class="params">
                    <div class="paramSlider">
                        <h3>Partnership</h3>
                        <input class="slider" type="range" min='0' max='10' value="0">
                        <p class="value">0</p>
                    </div>
                    <div class="paramSlider">
                        <h3>Joint</h3>
                        <input class="slider" type="range" min='0' max='10' value="0">
                        <p class="value">0</p>
                    </div>

                    <div class="paramSlider">
                        <h3>Responsibility</h3>
                        <input class="slider" type="range" min='0' max='10' value="0">
                        <p class="value">0</p>
                    </div>
                    <div class="paramSlider">
                        <h3>Kindness</h3>
                        <input class="slider" type="range" min='0' max='10' value="0">
                        <p class="value">0</p>
                    </div>

                    <div class="paramSlider">
                        <h3>Trust</h3>
                        <input class="slider" type="range" min='0' max='10' value="0">
                        <p class="value">0</p>
                    </div>
                    <div class="paramSlider">
                        <h3>Anger</h3>
                        <input class="slider" type="range" min='0' max='10' value="0">
                        <p class="value">0</p>
                    </div>

                    <div class="paramSlider">
                        <h3>Irritability</h3>
                        <input class="slider" type="range" min='0' max='10' value="0">
                        <p class="value">0</p>
                    </div>
                    <div class="paramSlider">
                        <h3>Compliance</h3>
                        <input class="slider" type="range" min='0' max='10' value="0">
                        <p class="value">0</p>
                    </div>

                    <div class="paramSlider">
                        <h3>Sociopathy</h3>
                        <input class="slider" type="range" min='0' max='10' value="0">
                        <p class="value">0</p>
                    </div>
                    <div class="paramSlider">
                        <h3>Isolation</h3>
                        <input class="slider" type="range" min='0' max='10' value="0">
                        <p class="value">0</p>
                    </div>
                    <input type="hidden" class="uidToServer">
                </div>
                <input type="submit" value="Send" class="submitButton">
            </form>
        </div>
    </div>
</main>

</body>
</html>